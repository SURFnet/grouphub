<div id="group_my_groups" class="group" data-url="{{ path('groups', {'type': 'my'}) }}">

    <section class="background_blue sort">
        <a id="close_my_groups" href="#" class="close"><i class="fa fa-times"></i></a>

        {% include ':groups:_sort.html.twig' with {'color': 'blue'} %}

        <div>
            <h3>{{ attribute(_context, 'my_groups_column_title_' ~ app.request.locale)|upper }}</h3>
            <p>{{ 'You own or are a member of the group'|trans }}</p>
        </div>
    </section>

    {% if myGroups.grouphub.owner|length %}
        <section class="owned">
            <i class="fa fa-fw fa-angle-down"></i>
            <h3>{{ 'Owner'|trans }}</h3>
        </section>

        <ul>
            {% include ':groups:my_groups-groups.html.twig' with {'type': 'my-owner', 'limit': 4, 'myGroups': myGroups.grouphub.owner} %}
        </ul>
    {% endif %}

    {% if myGroups.grouphub.admin|length %}
        <section class="owned">
            <i class="fa fa-fw fa-angle-down"></i>
            <h3>{{ 'Administrator'|trans }}</h3>
        </section>

        <ul>
            {% include ':groups:my_groups-groups.html.twig' with {'type': 'my-admin', 'limit': 4, 'myGroups': myGroups.grouphub.admin} %}
        </ul>
    {% endif %}

    {% if myGroups.grouphub.member|length %}
        <section class="owned">
            <i class="fa fa-fw fa-angle-down"></i>
            <h3>{{ 'Member'|trans }}</h3>
        </section>

        <ul>
            {% include ':groups:my_groups-groups.html.twig' with {'type': 'my-member', 'limit': 4, 'myGroups': myGroups.grouphub.member} %}
        </ul>
    {% endif %}

</div>

<div id="group_my_groups" class="group {% if not visibleGroups.group_my_groups %}hidden{% endif %}"
     data-url="{{ path('groups', {'type': 'my'}) }}">

    <section class="background_blue sort">
        <a id="close_my_groups" href="#" class="close"><i class="fa fa-times"></i></a>

        {% include ':groups:_sort.html.twig' with {'color': 'blue', 'sort': myGroups.sort} %}

        <div>
            <h3>{{ attribute(_context, 'my_groups_column_title_' ~ app.request.locale)|upper }}</h3>
            <p>{{ 'You own or are a member of the group'|trans }}</p>
        </div>
    </section>


    {% if myGroups.collection.grouphub.owner|length %}
        <section class="owned" id="group_my_groups_owner">
            <i class="fa fa-fw {% if displayState.my_groups_owner == 'collapsed' %}fa-angle-right{% else %}fa-angle-down{% endif %}"></i>
            <h3>{{ 'Owner'|trans }}</h3>
        </section>

        <ul class="{% if displayState.my_groups_owner == 'collapsed' %}hidden{% endif %}">
            {% include ':groups:my_groups-groups.html.twig' with {'type': 'my-owner', 'limit': 4, 'myGroups': myGroups.collection.grouphub.owner} %}
        </ul>
    {% endif %}

    {% if myGroups.collection.grouphub.admin|length %}
        <section class="owned" id="group_my_groups_admin">
            <i class="fa fa-fw {% if displayState.my_groups_admin == 'collapsed' %}fa-angle-right{% else %}fa-angle-down{% endif %}"></i>
            <h3>{{ 'Administrator'|trans }}</h3>
        </section>

        <ul class="{% if displayState.my_groups_admin == 'collapsed' %}hidden{% endif %}">
            {% include ':groups:my_groups-groups.html.twig' with {'type': 'my-admin', 'limit': 4, 'myGroups': myGroups.collection.grouphub.admin} %}
        </ul>
    {% endif %}

    {% if myGroups.collection.grouphub.member|length %}
        <section class="owned" id="group_my_groups_member">
            <i class="fa fa-fw {% if displayState.my_groups_member == 'collapsed' %}fa-angle-right{% else %}fa-angle-down{% endif %}"></i>
            <h3>{{ 'Member'|trans }}</h3>
        </section>

        <ul class="{% if displayState.my_groups_member == 'collapsed' %}hidden{% endif %}">
            {% include ':groups:my_groups-groups.html.twig' with {'type': 'my-member', 'limit': 4, 'myGroups': myGroups.collection.grouphub.member} %}
        </ul>
    {% endif %}

</div>

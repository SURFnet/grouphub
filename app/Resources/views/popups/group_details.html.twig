<div class="edit_group">
    <div class="left">
        <header>
            <a id="edit_group_close" href="#" class="close_modal close-modal"><i class="fa fa-times"></i></a>
            <p>{{ group.name }}</p>
            <i class="fa fa-angle-double-down"></i>
            <div class="hidden">{{ group.description }}</div>
        </header>

        <ul class="tabs">
            <li>
                <a id="group_members" href="#">
                    {{ 'Group members'|trans }}
                </a>
            </li>
            {% if is_granted('EDIT', group) %}
                <li>
                    <a id="add_members" href="#">
                        <i class="rounded fa fa-plus"></i>{{ 'Add members'|trans }}
                    </a>
                </li>
            {% endif %}
        </ul>

        <div id="group_members_tab">
            <div class="search_container">
                <div class="input_container">
                    <i class="fa fa-search"></i>
                    <input class="searchInput" type="text"/>
                </div>
            </div>

            <ul class="users" data-url="{{ path('search_group_members', {'id': group.id}) }}">
                {{ include(':popups:group_members.html.twig') }}
            </ul>
        </div>

        {% if is_granted('EDIT', group) %}
            <div id="add_members_tab hidden">
                <div class="search_container">
                    <div class="input_container">
                        <i class="fa fa-search"></i>
                        <input class="searchInput" type="text"/>
                    </div>
                </div>

                <ul class="users" data-url="{{ path('search_group_users', {'id': group.id}) }}">
                    {{ include(':popups:group_users.html.twig') }}
                </ul>
            </div>
        {% endif %}
    </div>

    {% if is_granted('EDIT', group) %}
    <ul class="icons right">
        <li>
            <a id="edit_group" href="#">
                <i class="fa fa-edit"></i>
            </a>
        </li>
        <li>
            <a id="download_group" href="#">
                <i class="fa fa-download"></i>
            </a>
        </li>
        <li>
            <a id="delete_group" href="#" data-url="{{ path('delete_group', {'id': group.id}) }}">
                <i class="fa fa-trash"></i>
            </a>
        </li>
    </ul>
    {% endif %}
</div>
